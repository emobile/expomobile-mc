<% content_for :javascript_includes do %>
  <%= javascript_include_tag "expositions" %>
<% end %>

<%= render "layouts/first_tab" %>
<%= form_for(@exposition) do |f| %>
<% if @exposition.errors.any? %>
<div id="error_explanation">
      <% if @exposition.errors.count == 1 %>
        <h2><%= t('activerecord.errors.template.header.one', :model => t("activerecord.models.exposition")) %></h2>
      <% else %>
        <h2><%= t('activerecord.errors.template.header.other', :model => t("activerecord.models.exposition"), :count => @exposition.errors.count) %></h2>
      <% end %>
  <ul>
    <% @exposition.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <p class="field">
    <%= f.label t("exposition.name") %>
    <%= f.text_field :name, :class => "text-input small-input", :required => true %><span class="required">*</span>
  </p>
  <p class="field">
    <%= f.label t("exposition.location") %>
    <%= f.text_field :location, :class => "text-input small-input", :required => true %><span class="required">*</span>
  </p>
  <p class="field">
    <%= f.label t("exposition.start_date") %>
    <%= f.text_field :start_date, :value => (f.object.start_date.nil?)? "": f.object.start_date.strftime("%d/%m/%Y %I:%M%p"), :class=>"text-input small-input datetimeRange", :required => true %><span class="required">*</span>
  </p>
  <p class="field">
    <%= f.label t("exposition.end_date") %>
    <%= f.text_field :end_date, :value => (f.object.end_date.nil?)? "": f.object.end_date.strftime("%d/%m/%Y %I:%M%p"), :class=>"text-input small-input datetimeRange", :required => true %><span class="required">*</span>
  </p>
  <p class="field">
    <%= f.label t("exposition.observations") %>
    <%= f.text_area :observations, :class=>"text-input medium-input" %>
  </p>
  <%= f.hidden_field :event_id, :value => session[:current_event_id] %>
<div class="form-actions">
  <%= f.submit nil, :class => 'button' %>
</div>

<% end %>
