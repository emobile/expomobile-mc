<div class="notification" style="margin-bottom: 40px; text-align: center">
  <div>
    <p><%= t("devise.resend_unlock_instructions") %></p>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username %>
  <%= f.text_field :username, :autofocus => true, :class=>"text-input"%></p>

    <div class="clear"></div>
  <p><%= f.submit t("devise.resend_unlock_instructions"), :class=>"button" %></p>
<% end %>
