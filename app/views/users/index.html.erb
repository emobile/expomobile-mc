<div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
  <table>
    <thead>
      <tr>
        <%#*<th><input class="check-all" type="checkbox" /></th>%>
        <th>ID</th>
        <th> <%=  t'user.fullname' %></th>
        <th> <%= t'user.email' %> </th>
        <th> <%= t'user.phone'  %></th>
        <th><%= t'user.role_name' %></th>
      </tr>

    </thead>

    <tfoot>
      <tr>
        <td colspan="8">
          <%#*<div class="bulk-actions align-left">%>
            <%#= render "layouts/select_action" %>
          <%#*</div>%>
          <%= render "layouts/pagination" %>
          <div class="clear"></div>
        </td>
      </tr>
    </tfoot>

    <tbody>

      <% @users.each do |user| %>
        <% @model = user %>
        <tr>
          <%#*<td><input type="checkbox" /></td>%>
          <%#if can? :show, User%>
            <%#*<td><%=link_to user.id, user, :class => 'button'</td>%>
          <%#else%>
            <td><%= label user.id, user.id%></td>
          <%#end%>
          <td><%= user.fullname %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role.name %></td>
          <%= render "layouts/index_links" %>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= render "layouts/action_links" %>
</div> 

<%= render "layouts/second_tab" %>