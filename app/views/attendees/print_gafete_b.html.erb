<html>
  <head>
    <title><%= t("atten.print_gafete") %></title>
  </head>
  <body style="margin: 0;">
    <% @logo_url = @event.logo.url %>
    <% @gafete_logo_visibility = (@with_logos == "true")? "visible": "hidden" %>
    <% if @gafete_big %>
      <div id="gafete-container" style="height: 13cm; margin: 0px; min-height: 13cm; color: #000;">
        <div style="width: 10cm; height: 13cm; margin-bottom: 30px; font-family: Arial, Helvetica, sans-serif; line-height: 15px; color: #000;">
          <div class="gafete-logo" style="height: 85px; text-align: center; visibility: <%= @gafete_logo_visibility %>;">
            <%= image_tag @logo_url, :height => 60, :style => "height: 60px; -ms-interpolation-mode: bicubic; margin: 7px;" %>
          </div>
          <% @conferences.each do |conference| %>
            <div class="conference" style="margin: 10px; border-bottom: 1px solid #aaa; font-size: 14px; vertical-align: top;">
              <div class="hour" style="display: inline-block; width: 70px; font-size: 8px;"><%= "#{conference.start_date.strftime("%I:%M%p")} - #{conference.end_date.strftime("%I:%M%p")}" %></div>
              <div class="conferencist-photo" style="width: 50px; display: inline-block;">
                <% if conference.photo.url(:thumb) != "/assets/missing.jpg" %>
                  <%= image_tag conference.photo.url(:thumb), :width => 40, :style => "width: 40px; -ms-interpolation-mode: bicubic;" %>
                <% end %>
              </div>
              <div class="conference-details" style="width: 200px; padding-left: 10px; display: inline-block;">
                <span style="font-weight: bold;"><%= conference.name %></span><br/>
                <span style="color: #c00205;"><%= conference.conferencist %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div id="gafete-container" style="height: 415px; margin: 0px; min-height: 400px; color: #000;">
        <div style="width: 305px; height: 415px; font-family: Arial, Helvetica, sans-serif; font-size: 12px; line-height: 1">
          <div class="gafete-logo" style="height: 85px; border-bottom: 1px solid #aaa; visibility: <%= @gafete_logo_visibility %>;">
            <%= image_tag @logo_url, :height => 65, :style => "height: 65px; -ms-interpolation-mode: bicubic; margin: 7px;" %>
          </div>
          <% @conferences.each do |conference| %>
            <div class="conference" style="margin: 10px; border-bottom: 1px solid #aaa;">
              <div class="conferencist-photo" style="width: 40px; display: inline-block;">
                <% if conference.photo.url(:thumb) != "/assets/missing.jpg" %>
                  <%= image_tag conference.photo.url(:thumb), :width => 40, :style => "width: 40px; -ms-interpolation-mode: bicubic;" %>
                <% end %>
              </div>
              <div class="conference-details" style="width: 220px; padding-left: 10px; vertical-align: top; display: inline-block;">
                <span style="font-weight: bold;"><%= conference.name %></span><br/>
                <span style="color: #c00205;"><%= conference.conferencist %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </body>
</html>