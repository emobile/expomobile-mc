<html>
  <head>
    <title><%= t("atten.print_gafete") %></title>
  </head>
  <body style="margin: 0;">
    <div id="gafete-container" style="height: 415px; margin: 0px; min-height: 400px; color: #000;">
      <% @logo_url = @event.logo.url %>
      <% @gafete_logo_visibility = (@with_logos == "true")? "visible": "hidden" %>
      <div style="width: 305px; height: 415px; margin: 0 auto 30px; font-family: Arial, Helvetica, sans-serif; font-size: 12px; line-height: 1">
        <div class="gafete-logo" style="height: 85px; border-bottom: 1px solid #aaa; visibility: <%= @gafete_logo_visibility %>;">
          <%= image_tag @logo_url, :height => 70, :style => "height: 70px; -ms-interpolation-mode: bicubic; margin: 7px;" %>
        </div>
        <% @conferences.each do |conference| %>
          <div class="conference" style="padding: 10px 0px; border-bottom: 1px solid #aaa;">
            <div class="conferencist-photo" style="width: 40px; display: inline-block;">
              <% if conference.photo.url(:thumb) != "/assets/missing.jpg" %>
                <%= image_tag conference.photo.url(:thumb), :width => 40, :style => "width: 40px; -ms-interpolation-mode: bicubic;" %>
              <% end %>
            </div>
            <div class="conference-details" style="width: 220px; padding-left: 10px; vertical-align: top; display: inline-block;">
              <span style="font-weight: bold;"><%= conference.name %></span><br/>
              <span style="color: #c00205;"><%= conference.conferencist %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>